<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/university_app_icon_4k"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/university_app_icon_4k"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.NumNewsApp"
        tools:targetApi="31">
        <activity
            android:name=".LogoutPage"
            android:exported="false" />
        <activity
            android:name=".UploadActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.NumNewsApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".HomePageActivity" />
        <activity android:name=".SearchbarActivity" />
        <activity android:name=".DetailsActivity" />
        <activity android:name=".VideoDetailActivity" />
    </application>

</manifest>