<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="409dp"
    android:layout_height="300dp"
    android:id="@+id/videoCardView"
    android:clickable="true"
    android:layout_marginTop="50dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        >

        <VideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/img_item1" />
<!--        <ImageView-->
<!--            android:id="@+id/thumbnail"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="180dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            />-->
        <!-- Play Button -->
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:gravity="center_vertical|center_horizontal"
           >
           <ImageView
               android:id="@+id/playButton"
               android:layout_width="64dp"
               android:layout_height="64dp"
               android:layout_gravity="center"
               android:src="@drawable/baseline_play_circle_filled_24"
               android:background="@drawable/play_button_background"
               android:visibility="visible"

               />


       </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/titleVideo"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:paddingStart="150dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/contentVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content......................"

            />
    </LinearLayout>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="220dp"
        >

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_news"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="num"
            android:layout_marginTop="50dp"
            android:layout_marginStart="20dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="53dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/baseline_access_time_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14m ago"
            android:layout_marginTop="50dp"
            android:layout_marginStart="70dp"
            />
    </RelativeLayout>


</androidx.cardview.widget.CardView>